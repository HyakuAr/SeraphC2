# SeraphC2 Configuration Template
# Copy this file to .env and configure your settings
# For production deployment, see .env.production.example

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================

# Environment type: development, staging, production, test
NODE_ENV=development

# Server binding configuration
PORT=3000
HOST=localhost

# HTTP/HTTPS Configuration
HTTP_PORT=8080
HTTPS_PORT=8443
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
ENABLE_REQUEST_LOGGING=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL connection settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=seraphc2
DB_USER=seraphc2
DB_PASSWORD=seraphc2_dev_password

# Connection pool configuration
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_CONNECTION_TIMEOUT=10000

# Database health monitoring
DB_ENABLE_HEALTH_CHECK=true
DB_HEALTH_CHECK_INTERVAL=30000

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis connection settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=seraphc2:dev:

# Redis connection behavior
REDIS_MAX_RETRIES=3
REDIS_CONNECT_TIMEOUT=10000

# =============================================================================
# SESSION MANAGEMENT
# =============================================================================

# Session lifecycle configuration
SESSION_TTL_SECONDS=3600
SESSION_MAX_IDLE_SECONDS=1800
SESSION_ENABLE_SLIDING_EXPIRATION=true
SESSION_MAX_CONCURRENT=10
SESSION_ENABLE_DISTRIBUTED=false

# =============================================================================
# CLUSTER CONFIGURATION
# =============================================================================

# Node identification
NODE_ID=seraphc2-node-dev-1
NODE_ROLE=primary

# Cluster behavior (disabled for development)
CLUSTER_ENABLE=false
CLUSTER_HEARTBEAT_INTERVAL=5000
CLUSTER_HEARTBEAT_TIMEOUT=15000
CLUSTER_ENABLE_AUTO_SCALING=false
CLUSTER_MIN_NODES=1
CLUSTER_MAX_NODES=10

# =============================================================================
# LOAD BALANCER CONFIGURATION
# =============================================================================

# Load balancing algorithm: round-robin, least-connections, ip-hash, weighted
LB_ALGORITHM=round-robin
LB_HEALTH_CHECK_INTERVAL=30000
LB_HEALTH_CHECK_TIMEOUT=5000
LB_ENABLE_STICKY_SESSIONS=false
LB_ENABLE_CIRCUIT_BREAKER=true
LB_CIRCUIT_BREAKER_THRESHOLD=5
LB_MAX_RETRIES=3

# =============================================================================
# MONITORING AND ALERTING
# =============================================================================

# Performance monitoring
MONITORING_ENABLE=true
MONITORING_METRICS_INTERVAL=30000
MONITORING_RETENTION_DAYS=7

# Alerting configuration
MONITORING_ENABLE_ALERTING=true
MONITORING_ALERT_CHECK_INTERVAL=60000
MONITORING_MAX_ALERTS_PER_HOUR=10

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# IMPORTANT: Change these values in production!
# Generate secure secrets using: openssl rand -base64 32
JWT_SECRET=dev_jwt_secret_key_change_in_production_32chars
ENCRYPTION_KEY=dev_encryption_key_change_in_production_32chars

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level: error, warn, info, debug, verbose
LOG_LEVEL=info
LOG_FILE=logs/seraphc2.log

# =============================================================================
# PROTOCOL CONFIGURATION
# =============================================================================

# Protocol-specific ports and settings
DNS_PORT=53
SMB_PIPE_NAME=seraphc2_dev

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================

# SSL certificate paths (for HTTPS)
SSL_CERT_PATH=certificates/server.crt
SSL_KEY_PATH=certificates/server.key

# =============================================================================
# DEVELOPMENT-SPECIFIC SETTINGS
# =============================================================================

# These settings are optimized for development
# For production settings, see .env.production.example

# Development database with relaxed security
# Development Redis without authentication
# Verbose logging enabled
# Single-node configuration
# Relaxed session limits